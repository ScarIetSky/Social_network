{% extends "base.html.twig" %}

{% block body %}
    <nav class="navbar navbar-inverse navbar-static-top">
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand" href="{{ path('usersView', {'id': userInfo.id}) }}">
                    <img src="{{ asset('/img/logo.png') }}" alt="memorynotfound logo" width="16px"
                            height="16px"/>
                </a>
                <a class="navbar-brand" href="{{ path('people') }}">People</a>
                <a class="navbar-brand"
                        href="{{ path('usersView', {'id': userInfo.id}) }}">Profile</a>
            </div>
            <div id="navbar" class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li>
                        <a href="{{ path('logout') }}">Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container">
        <div class="col-md-6">
            <h2>Users:</h2>
            <table class="table table-sm table-dark">
                <thead>
                <tr>
                    <th scope="col">Login</th>
                    <th scope="col">Sex</th>
                </tr>
                </thead>
                <tbody>
                {% for usersInfo in users %}
                    <tr>
                        <td>
                            <a href="{{ path('usersView', {'id' : usersInfo.id}) }}">{{ usersInfo.login }}</a>
                        </td>
                        <td>
                            <span>{{ usersInfo.sex }}</span>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}